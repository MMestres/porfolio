---
import Slider from "./Slider.astro";
import ExternalLink from "./icons/ExternalLink.astro";
const { date, company, logo, employ, link } = Astro.props
---
<li class={`ms-10 group ${Astro.props.class}`}>
  <div class="grid lg:grid-cols-2 items-center place-items-center lg:place-items-end">
    <div class="reveal-item opacity-0 animate-duration-1000 animate-delay-300">
      <img src={logo} class="absolute size-10 rounded-full mt-6 -start-5 border-primary/60 group-hover:animate-pulseprimary" />
      <time class="mb-1 font-normal leading-none text-principal/80">{date}</time>
      {link && <a href={link} target="_blank" rel="noopener noreferrer" class="w-fit text-4xl font-semibold block group-hover:text-primary">{company}<ExternalLink class="transition-opacity duration-1000 inline size-5 ml-2 lg:opacity-0 group-hover:opacity-60" /></a>}
      {!link && <p class="text-4xl font-semibold block group-hover:text-primary">{company}</p>}
      <p class="text-lg font-semibold text-secondary">{employ}</p>
      <div class="mt-4 space-y-2 text-pretty text-principal/90">
        <slot>
      </div>
    </div>
    <Slider class="opacity-0 transition-opacity duration-1000 group-hover:opacity-100 my-10 lg:my-0">
      <slot name="images" />
    </Slider>
  </div>
</li>