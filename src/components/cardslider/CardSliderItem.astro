---
import ExternalLink from '../icons/ExternalLink.astro'
const { image, name, rol, href } = Astro.props
---
<div class="relative flex flex-col items-center justify-center gap-4 h-[310px] transition-all top-0 duration-1000">
  <p class="text-lg md:text-xl lg:text-2xl text-pretty border-b border-primary/60 p-4">
    "<slot />"
  </p>
  <div class="flex flex-row gap-4">
    <img src={image} class="size-14 md:size-16 lg:size-20 rounded-full" />
    <div class="flex flex-col text-left justify-center">
      <a href={href} target="_blank" rel="noopener noreferrer" class="text-xl lg:text-2xl font-bold text-primary hover:text-primary/80 transition-colors duration-1000">{name}<ExternalLink class="inline size-5 ml-2 opacity-60" /></a>
      <p class="text-sm md:text-base opacity-80">{rol}</p>
    </div>
  </div>
</div>